{
    "manifest_version": 2,
    "name": "hnlinks",
    "version": "0.4.0",
    "description": "Browse links in HackerNews threads, fast!",
    "content_scripts": [{
        "matches": ["https://news.ycombinator.com/item*"],
        "js": ["readmore.js", "content.js"],
        "css": ["styles.css"]
    }],
    "permissions": [
        "*://hn.algolia.com/api/*"
    ],
    "icons": {
        "64": "icon.png"
    },
    "browser_action": {
        "default_title": "Toggle visibility of the sidebar",
        "default_icon": {
            "64": "icon.png"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+8"
            },
            "description": "Toggle visibility of sidebar."
        }
    }
}
